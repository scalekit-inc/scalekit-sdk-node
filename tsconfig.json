{
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "ES6",
    "module": "commonjs",
    "declaration": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "outDir": "lib",
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "typeRoots": ["src/types"],
    "moduleResolution": "Node"
  },
  "include": ["src"],
}
